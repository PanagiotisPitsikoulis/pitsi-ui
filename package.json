{
  "name": "ui",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "pitsi",
    "url": "https://x.com/panos_dev_"
  },
  "workspaces": [
    "apps/v4",
    "packages/pitsi",
    "packages/tests"
  ],
  "scripts": {
    "run": "bun ./scripts/run.ts",
    "clean": "rm -rf .turbo node_modules/.cache apps/*/.next apps/*/.turbo packages/*/.turbo",
    "build": "turbo run build",
    "build:all": "turbo run build",
    "test:all": "start-server-and-test v4:dev http://localhost:4000 test:dev",
    "test:dev": "turbo run test --filter=!pitsi-ui --force",
    "test": "start-server-and-test v4:dev http://localhost:4000 test:dev",
    "dev": "turbo run dev --force --continue",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "typecheck:all": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "check": "turbo lint typecheck format:check",
    "preview": "turbo run preview",
    "v4:dev": "bun run --filter v4 dev",
    "v4:build": "bun run --filter v4 build",
    "v4:start": "bun run --filter v4 start",
    "v4:test": "bun run --bun --filter v4 vitest run",
    "v4:test:watch": "bun run --bun --filter v4 vitest",
    "v4:typecheck": "bun run --bun --filter v4 typecheck",
    "v4:lint": "bun run --bun --filter v4 lint",
    "v4:lint:fix": "bun run --bun --filter v4 lint:fix",
    "v4:images:webp": "bun run --bun --filter v4 images:webp",
    "create": "cd apps/v4 && bun scripts/create.mts",
    "purge": "cd apps/v4 && ./scripts/purge.sh",
    "pitsi": "bun run --bun --filter pitsi start:dev",
    "pitsi:dev": "turbo --filter=pitsi dev",
    "pitsi:build": "bun run --bun --filter pitsi build",
    "pitsi:test": "bun run --bun --filter pitsi test",
    "pitsi:test:watch": "bun run --bun --filter pitsi vitest",
    "pitsi:typecheck": "bun run --bun --filter pitsi typecheck",
    "pitsi:lint": "bun run --bun --filter pitsi lint",
    "pitsi:lint:fix": "bun run --bun --filter pitsi lint:fix",
    "pitsi:prod": "bun run --bun --filter pitsi start:prod",
    "tests:test": "bun run --bun --filter tests test",
    "tests:test:watch": "bun run --bun --filter tests vitest",
    "tests:typecheck": "bun run --bun --filter tests typecheck",
    "registry:build": "bun run --bun --filter v4 registry:build && bun run --bun lint:fix && bun run --bun format:write -- --loglevel silent",
    "registry:capture": "bun run --bun --filter v4 registry:capture",
    "registry:capture:force": "bun run --bun --filter v4 registry:capture:force",
    "registry:capture:blocks": "bun run --bun --filter v4 registry:capture:blocks",
    "registry:capture:debug": "bun run --bun --filter v4 registry:capture:debug",
    "registry:capture:full": "bun run --bun --filter v4 registry:capture:full",
    "registry:capture:workflow": "bun run --filter v4 registry:capture:workflow",
    "readiness": "bun run --bun --filter v4 readiness",
    "readiness:list": "bun run --bun --filter v4 readiness:list",
    "readiness:update": "bun run --bun --filter v4 readiness:update",
    "readiness:bulk": "bun run --bun --filter v4 readiness:bulk",
    "validate:registries": "bun run --bun --filter v4 validate:registries",
    "stripe:test": "bun run --bun --filter v4 stripe:test",
    "stripe:setup": "bun run --bun --filter v4 stripe:setup",
    "release": "changeset version",
    "pub:beta": "cd packages/pitsi && bun run --bun pub:beta",
    "pub:release": "cd packages/pitsi && bun run --bun pub:release",
    "publish": "bash scripts/publish.sh",
    "publish:beta": "bash scripts/publish.sh --beta",
    "publish:interactive": "bash scripts/publish.sh --interactive",
    "publish:tag": "bash scripts/publish.sh --interactive --tag",
    "fix:urls": "bash scripts/fix-urls.sh"
  },
  "packageManager": "bun@1.1.38",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@gsap/react": "^2.1.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@manypkg/cli": "^0.25.1",
    "@typescript-eslint/parser": "^8.50.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.6.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "gsap": "^3.14.2",
    "motion": "^12.23.26",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/hast": "^3.0.4",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "start-server-and-test": "^2.1.3",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
