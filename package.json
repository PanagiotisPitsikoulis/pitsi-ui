{
  "name": "ui",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "pitsi",
    "url": "https://x.com/panos_dev_"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "!**/test/**",
    "!**/fixtures/**",
    "!**/temp/**",
    "!packages/tests/temp/**",
    "!deprecated/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build",
    "test:all": "start-server-and-test v4:dev http://localhost:4000 test:dev",
    "test:dev": "turbo run test --filter=!pitsi-ui --force",
    "test": "start-server-and-test v4:dev http://localhost:4000 test:dev",
    "dev": "turbo run dev --force --continue",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "typecheck:all": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "check": "turbo lint typecheck format:check",
    "preview": "turbo run preview",
    "v4:dev": "pnpm --filter=v4 dev",
    "v4:build": "pnpm --filter=v4 build",
    "v4:test": "pnpm --filter=v4 exec vitest run",
    "v4:test:watch": "pnpm --filter=v4 exec vitest",
    "v4:typecheck": "pnpm --filter=v4 typecheck",
    "v4:lint": "pnpm --filter=v4 lint",
    "v4:lint:fix": "pnpm --filter=v4 lint:fix",
    "bob:dev": "pnpm --filter=bob dev",
    "bob:build": "pnpm --filter=bob build",
    "bob:typecheck": "pnpm --filter=bob typecheck",
    "bob:lint": "pnpm --filter=bob lint",
    "bob:lint:fix": "pnpm --filter=bob lint:fix",
    "pitsi": "pnpm --filter=pitsi start:dev",
    "pitsi:dev": "turbo --filter=pitsi dev",
    "pitsi:build": "pnpm --filter=pitsi build",
    "pitsi:test": "pnpm --filter=pitsi test",
    "pitsi:test:watch": "pnpm --filter=pitsi exec vitest",
    "pitsi:typecheck": "pnpm --filter=pitsi typecheck",
    "pitsi:lint": "pnpm --filter=pitsi lint",
    "pitsi:lint:fix": "pnpm --filter=pitsi lint:fix",
    "pitsi:prod": "pnpm --filter=pitsi start:prod",
    "tests:test": "pnpm --filter=tests test",
    "tests:test:watch": "pnpm --filter=tests exec vitest",
    "tests:typecheck": "pnpm --filter=tests typecheck",
    "registry:build": "pnpm --filter=v4 registry:build && pnpm lint:fix && pnpm format:write -- --loglevel silent",
    "registry:capture": "pnpm --filter=v4 registry:capture",
    "readiness": "pnpm --filter=v4 readiness",
    "readiness:list": "pnpm --filter=v4 readiness:list",
    "readiness:update": "pnpm --filter=v4 readiness:update",
    "readiness:bulk": "pnpm --filter=v4 readiness:bulk",
    "validate:registries": "pnpm --filter=v4 validate:registries",
    "stripe:test": "pnpm --filter=v4 stripe:test",
    "stripe:setup": "pnpm --filter=v4 stripe:setup",
    "release": "changeset version",
    "pub:beta": "cd packages/pitsi && pnpm pub:beta",
    "pub:release": "cd packages/pitsi && pnpm pub:release",
    "publish": "bash scripts/publish.sh",
    "publish:beta": "bash scripts/publish.sh --beta",
    "publish:interactive": "bash scripts/publish.sh --interactive",
    "publish:tag": "bash scripts/publish.sh --interactive --tag",
    "fix:urls": "bash scripts/fix-urls.sh"
  },
  "packageManager": "pnpm@9.0.6",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@gsap/react": "^2.1.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@manypkg/cli": "^0.25.1",
    "@typescript-eslint/parser": "^8.48.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.6.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "gsap": "^3.13.0",
    "motion": "^12.23.25",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "start-server-and-test": "^2.1.3",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
