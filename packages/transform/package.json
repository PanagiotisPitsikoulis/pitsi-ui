{
  "name": "transform",
  "version": "0.0.1",
  "private": true,
  "description": "HTML to TSX and other format transformations",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "scrape": "tsx src/features/scraper/scraper.ts",
    "capture": "tsx src/features/visual-capture/visual-scraper.ts",
    "extract:theme": "tsx src/features/theme-extractor/index.ts",
    "generate": "tsx src/features/component-generator/index.ts",
    "manifest:build": "tsx src/workflow/build-manifest.ts",
    "fix:components": "tsx src/scripts/fix-components.ts",
    "workflow": "tsx src/workflow/run-priority.ts",
    "sync-templates": "tsx src/scripts/sync-templates.ts",
    "verify-templates": "tsx src/scripts/verify-templates.ts",
    "download-images": "tsx src/scripts/download-images.ts",
    "download-template-images": "tsx src/scripts/download-template-images.ts",
    "workflow:full": "tsx src/workflow/full-pipeline.ts",
    "post-process": "tsx src/workflow/post-processing.ts",
    "playwright:install": "playwright install chromium",
    "transform:blocks": "tsx src/features/block-transformer/index.ts",
    "transform:blocks:list": "tsx src/features/block-transformer/index.ts list",
    "transform:blocks:all": "tsx src/features/block-transformer/index.ts transform",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache"
  },
  "devDependencies": {
    "@types/cheerio": "^1.0.0",
    "@types/node": "^20.11.27",
    "tsup": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "p-limit": "^7.2.0",
    "playwright": "^1.56.1"
  }
}
