REACT_EDITOR=zed

# Development optimizations
NEXT_TELEMETRY_DISABLED=1
TURBOPACK=1

# Registry visibility
# Set to "true" to hide alpha readiness items from all registry queries
HIDE_ALPHA_ITEMS=false

# Reduce memory pressure (overrides NODE_OPTIONS in package.json if needed)
# NODE_OPTIONS=--max-old-space-size=4096

# Logo.dev API tokens (get from https://logo.dev)
NEXT_PUBLIC_LOGO_DEV_TOKEN=pk_...
NEXT_SECRET_LOGO_DEV_TOKEN=sk_...

# Playwright MCP extension token
PLAYWRIGHT_MCP_EXTENSION_TOKEN=...

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pitsi_ui

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:4000

# Stripe (use test keys for development)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_PRIVATE_KEY=sk_test_...
# Run `pnpm stripe:setup` to get this automatically
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Auth Providers
# Get GitHub OAuth credentials from: https://github.com/settings/developers
# Callback URL: http://localhost:4000/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Get Google OAuth credentials from: https://console.cloud.google.com/apis/credentials
# Callback URL: http://localhost:4000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
