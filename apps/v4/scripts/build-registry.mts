    label: style.title,
  }))

  const outputPath = path.join(process.cwd(), "public/r/styles.json")
  await fs.writeFile(outputPath, JSON.stringify(payload, null, 2))

  await new Promise<void>((resolve, reject) => {
    execFile('prettier', ['--write', outputPath], (error) => {
      if (error) {
        reject(error);
      } else {
        resolve();
      }
    });
  })
}

