    "separator",
    "switch",
    "utils"
  ],
  "files": [
    {
      "path": "registry/new-york-v4/blocks/application/app-database-settings-1.tsx",
      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport {\n  Bell,\n  Database,\n  Moon,\n  Palette,\n  Save,\n  Shield,\n  Sun,\n  User,\n} from \"lucide-react\"\n\nimport { cn } from \"@/lib/utils\"\nimport {\n  Avatar,\n  AvatarFallback,\n  AvatarImage,\n} from \"@/registry/new-york-v4/ui/avatar\"\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\nimport {\n  Card,\n  CardContent,\n  CardDescription,\n  CardHeader,\n  CardTitle,\n} from \"@/registry/new-york-v4/ui/card\"\nimport { Input } from \"@/registry/new-york-v4/ui/input\"\nimport { Label } from \"@/registry/new-york-v4/ui/label\"\nimport {\n  Select,\n  SelectContent,\n  SelectItem,\n  SelectTrigger,\n  SelectValue,\n} from \"@/registry/new-york-v4/ui/select\"\nimport { Separator } from \"@/registry/new-york-v4/ui/separator\"\nimport { Switch } from \"@/registry/new-york-v4/ui/switch\"\n\nexport function AppDatabaseSettings1() {\n  const [profile, setProfile] = React.useState({\n    name: \"Sarah Miller\",\n    email: \"sarah@example.com\",\n  })\n\n  const [preferences, setPreferences] = React.useState({\n    defaultDatabase: \"production\",\n    queryTimeout: \"30\",\n    theme: \"system\",\n    notifications: true,\n    autoSave: true,\n  })\n\n  return (\n    <div className=\"p-4\">\n      <div className=\"mx-auto max-w-5xl space-y-4\">\n        <div>\n          <h1 className=\"text-foreground text-3xl font-bold tracking-tight\">\n            Settings\n          </h1>\n          <p className=\"text-muted-foreground\">\n            Manage your account and preferences\n          </p>\n        </div>\n\n        <Card>\n          <CardHeader>\n            <CardTitle className=\"flex items-center gap-2\">\n              <User className=\"size-5\" />\n              Profile\n            </CardTitle>\n            <CardDescription>Your personal information</CardDescription>\n          </CardHeader>\n          <CardContent className=\"space-y-6\">\n            <div className=\"flex items-center gap-6\">\n              <Avatar className=\"size-20\">\n                <AvatarImage src=\"/avatars/03.webp\" />\n                <AvatarFallback className=\"bg-muted text-xl\">SM</AvatarFallback>\n              </Avatar>\n              <div className=\"space-y-2\">\n                <Button variant=\"outline\" size=\"sm\">\n                  Change Avatar\n                </Button>\n                <p className=\"text-muted-foreground text-xs\">\n                  JPG, PNG or GIF. Max 2MB.\n                </p>\n              </div>\n            </div>\n\n            <Separator />\n\n            <div className=\"grid gap-4 sm:grid-cols-2\">\n              <div className=\"space-y-2\">\n                <Label htmlFor=\"name\">Name</Label>\n                <Input\n                  id=\"name\"\n                  value={profile.name}\n                  onChange={(e) =>\n                    setProfile({ ...profile, name: e.target.value })\n                  }\n                />\n              </div>\n              <div className=\"space-y-2\">\n                <Label htmlFor=\"email\">Email</Label>\n                <Input\n                  id=\"email\"\n                  type=\"email\"\n                  value={profile.email}\n                  onChange={(e) =>\n                    setProfile({ ...profile, email: e.target.value })\n                  }\n                />\n              </div>\n            </div>\n          </CardContent>\n        </Card>\n\n        <Card>\n          <CardHeader>\n            <CardTitle className=\"flex items-center gap-2\">\n              <Database className=\"size-5\" />\n              Database Preferences\n            </CardTitle>\n            <CardDescription>Configure database settings</CardDescription>\n          </CardHeader>\n          <CardContent className=\"space-y-6\">\n            <div className=\"grid gap-4 sm:grid-cols-2\">\n              <div className=\"space-y-2\">\n                <Label>Default Database</Label>\n                <Select\n                  value={preferences.defaultDatabase}\n                  onValueChange={(v) =>\n                    setPreferences({ ...preferences, defaultDatabase: v })\n                  }\n                >\n                  <SelectTrigger>\n                    <SelectValue />\n                  </SelectTrigger>\n                  <SelectContent>\n                    <SelectItem value=\"production\">Production</SelectItem>\n                    <SelectItem value=\"staging\">Staging</SelectItem>\n                    <SelectItem value=\"development\">Development</SelectItem>\n                  </SelectContent>\n                </Select>\n              </div>\n              <div className=\"space-y-2\">\n                <Label>Query Timeout (seconds)</Label>\n                <Select\n                  value={preferences.queryTimeout}\n                  onValueChange={(v) =>\n                    setPreferences({ ...preferences, queryTimeout: v })\n                  }\n                >\n                  <SelectTrigger>\n                    <SelectValue />\n                  </SelectTrigger>\n                  <SelectContent>\n                    <SelectItem value=\"15\">15 seconds</SelectItem>\n                    <SelectItem value=\"30\">30 seconds</SelectItem>\n                    <SelectItem value=\"60\">60 seconds</SelectItem>\n                    <SelectItem value=\"120\">120 seconds</SelectItem>\n                  </SelectContent>\n                </Select>\n              </div>\n            </div>\n\n            <Separator />\n\n            <div className=\"flex items-center justify-between\">\n              <div className=\"space-y-0.5\">\n                <Label>Auto-save Queries</Label>\n                <p className=\"text-muted-foreground text-sm\">\n                  Automatically save queries to history\n                </p>\n              </div>\n              <Switch\n                checked={preferences.autoSave}\n                onCheckedChange={(v) =>\n                  setPreferences({ ...preferences, autoSave: v })\n                }\n              />\n            </div>\n          </CardContent>\n        </Card>\n\n        <Card>\n          <CardHeader>\n            <CardTitle className=\"flex items-center gap-2\">\n              <Palette className=\"size-5\" />\n              Appearance\n            </CardTitle>\n            <CardDescription>Customize how the app looks</CardDescription>\n          </CardHeader>\n          <CardContent>\n            <div className=\"space-y-2\">\n              <Label>Theme</Label>\n              <div className=\"grid grid-cols-3 gap-3\">\n                {[\n                  { value: \"light\", icon: Sun, label: \"Light\" },\n                  { value: \"dark\", icon: Moon, label: \"Dark\" },\n                  { value: \"system\", icon: Palette, label: \"System\" },\n                ].map((theme) => (\n                  <button\n                    key={theme.value}\n                    onClick={() =>\n                      setPreferences({ ...preferences, theme: theme.value })\n                    }\n                    className={cn(\n                      \"flex flex-col items-center gap-2 rounded-lg border p-4 transition-colors\",\n                      preferences.theme === theme.value\n                        ? \"border-foreground/30 bg-muted\"\n                        : \"hover:bg-muted/50\"\n                    )}\n                  >\n                    <theme.icon className=\"size-5\" />\n                    <span className=\"text-sm font-medium\">{theme.label}</span>\n                  </button>\n                ))}\n              </div>\n            </div>\n          </CardContent>\n        </Card>\n\n        <Card>\n          <CardHeader>\n            <CardTitle className=\"flex items-center gap-2\">\n              <Bell className=\"size-5\" />\n              Notifications\n            </CardTitle>\n            <CardDescription>\n              Manage your notification preferences\n            </CardDescription>\n          </CardHeader>\n          <CardContent>\n            <div className=\"flex items-center justify-between\">\n              <div className=\"space-y-0.5\">\n                <Label>Query Notifications</Label>\n                <p className=\"text-muted-foreground text-sm\">\n                  Get notified when long queries complete\n                </p>\n              </div>\n              <Switch\n                checked={preferences.notifications}\n                onCheckedChange={(v) =>\n                  setPreferences({ ...preferences, notifications: v })\n                }\n              />\n            </div>\n          </CardContent>\n        </Card>\n\n        <Button className=\"w-full\" size=\"lg\">\n          <Save className=\"mr-2 size-4\" />\n          Save Changes\n        </Button>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:block"
    }
  ],
  "categories": [
    "application",
    "app-database"
  ],
  "tier": "free",
  "readiness": "beta"
}