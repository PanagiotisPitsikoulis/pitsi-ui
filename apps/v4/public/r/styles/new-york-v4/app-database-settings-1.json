{
  "$schema": "https://pitsiui.com/schema/registry-item.json",
  "name": "app-database-settings-1",
  "type": "registry:block",
  "description": "Database settings with profile and preferences",
  "dependencies": [
    "lucide-react"
  ],
  "registryDependencies": [
    "avatar",
    "button",
