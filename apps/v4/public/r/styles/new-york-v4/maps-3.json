{
  "$schema": "https://pitsiui.com/schema/registry-item.json",
  "name": "maps-3",
  "type": "registry:block",
  "description": "Store locator with searchable sidebar list and interactive map",
  "dependencies": [
    "maplibre-gl",
    "next-themes",
    "@hugeicons/react",
    "@hugeicons/core-free-icons"
  ],
  "registryDependencies": [
