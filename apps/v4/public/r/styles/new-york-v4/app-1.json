      "content": "\"use client\"\n\nimport Image from \"next/image\"\nimport { CalendarCheck, ChartLine, Smartphone, Zap } from \"lucide-react\"\n\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\n\ninterface AppFeature {\n  icon: React.ComponentType<{ className?: string }>\n  title: string\n  description: string\n}\n\nconst features: AppFeature[] = [\n  {\n    icon: CalendarCheck,\n    title: \"Book in Seconds\",\n    description: \"Reserve your spot in any class with just two taps\",\n  },\n  {\n    icon: ChartLine,\n    title: \"Track Progress\",\n    description: \"Monitor your workouts, calories, and personal records\",\n  },\n  {\n    icon: Zap,\n    title: \"Get Reminders\",\n    description: \"Never miss a class with smart notifications\",\n  },\n  {\n    icon: Smartphone,\n    title: \"Manage Membership\",\n    description: \"View your plan, freeze, or upgrade anytime\",\n  },\n]\n\nexport function App1() {\n  return (\n    <section className=\"bg-neutral-950 py-24 lg:py-32\">\n      <div className=\"container px-6\">\n        <div className=\"grid items-center gap-12 lg:grid-cols-2 lg:gap-16\">\n          {/* Content */}\n          <div>\n            <p className=\"mb-4 text-sm font-medium tracking-[0.3em] text-white/60 uppercase\">\n              The App\n            </p>\n            <h2 className=\"font-display text-4xl font-bold text-white md:text-5xl\">\n              Your Gym,\n              <br />\n              In Your Pocket\n            </h2>\n            <p className=\"mt-6 text-lg text-white/60\">\n              Book classes, track your progress, and stay connected with our\n              community—all from your phone.\n            </p>\n\n            {/* Features List */}\n            <div className=\"mt-10 grid gap-6 sm:grid-cols-2\">\n              {features.map((feature) => (\n                <div key={feature.title} className=\"flex gap-4\">\n                  <div className=\"flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-white/5\">\n                    <feature.icon className=\"h-5 w-5 text-white\" />\n                  </div>\n                  <div>\n                    <h3 className=\"mb-1 font-semibold text-white\">\n                      {feature.title}\n                    </h3>\n                    <p className=\"text-sm text-white/60\">\n                      {feature.description}\n                    </p>\n                  </div>\n                </div>\n              ))}\n            </div>\n\n            {/* Download buttons */}\n            <div className=\"mt-10 flex flex-wrap gap-4\">\n              <Button\n                size=\"lg\"\n                className=\"bg-white text-black hover:bg-white/90\"\n              >\n                <svg\n                  className=\"mr-2 h-5 w-5\"\n                  viewBox=\"0 0 24 24\"\n                  fill=\"currentColor\"\n                >\n                  <path d=\"M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z\" />\n                </svg>\n                App Store\n              </Button>\n              <Button\n                size=\"lg\"\n                variant=\"outline\"\n                className=\"border-white/20 bg-transparent text-white hover:bg-white/10\"\n              >\n                <svg\n                  className=\"mr-2 h-5 w-5\"\n                  viewBox=\"0 0 24 24\"\n                  fill=\"currentColor\"\n                >\n                  <path d=\"M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z\" />\n                </svg>\n                Google Play\n              </Button>\n            </div>\n          </div>\n\n          {/* Phone mockup */}\n          <div className=\"relative flex justify-center\">\n            <div className=\"relative\">\n              {/* Phone frame */}\n              <div className=\"relative z-10 overflow-hidden rounded-[3rem] border-8 border-neutral-800 bg-black shadow-2xl\">\n                <div className=\"relative h-[600px] w-[280px]\">\n                  {/* Status bar */}\n                  <div className=\"absolute inset-x-0 top-0 z-20 flex h-8 items-center justify-between px-6 text-xs text-white\">\n                    <span>9:41</span>\n                    <div className=\"flex items-center gap-1\">\n                      <svg\n                        className=\"h-4 w-4\"\n                        fill=\"currentColor\"\n                        viewBox=\"0 0 24 24\"\n                      >\n                        <path d=\"M12 3C6.95 3 3 6.95 3 12s3.95 9 9 9c.41 0 .75-.34.75-.75s-.34-.75-.75-.75c-4.13 0-7.5-3.37-7.5-7.5s3.37-7.5 7.5-7.5c3.17 0 5.88 1.98 6.97 4.75h-1.72c-.41 0-.75.34-.75.75s.34.75.75.75h3c.41 0 .75-.34.75-.75V9c0-.41-.34-.75-.75-.75s-.75.34-.75.75v1.34C18.11 6.9 15.3 3 12 3z\" />\n                      </svg>\n                    </div>\n                  </div>\n\n                  {/* App content mockup */}\n                  <div className=\"h-full w-full bg-gradient-to-b from-neutral-900 to-black pt-12\">\n                    {/* Header */}\n                    <div className=\"px-6 pb-6\">\n                      <p className=\"mb-1 text-xs text-white/60\">Good morning</p>\n                      <p className=\"text-xl font-bold text-white\">\n                        Ready to crush it?\n                      </p>\n                    </div>\n\n                    {/* Today's class card */}\n                    <div className=\"mx-4 rounded-2xl bg-white p-4\">\n                      <p className=\"mb-1 text-xs font-medium text-black/60 uppercase\">\n                        Up Next\n                      </p>\n                      <p className=\"mb-2 text-lg font-bold text-black\">\n                        HIIT with Alex\n                      </p>\n                      <div className=\"flex items-center justify-between\">\n                        <span className=\"text-sm text-black/60\">\n                          6:00 AM • 45 min\n                        </span>\n                        <span className=\"rounded-full bg-black px-3 py-1 text-xs font-medium text-white\">\n                          Booked\n                        </span>\n                      </div>\n                    </div>\n\n                    {/* Quick stats */}\n                    <div className=\"mt-4 grid grid-cols-3 gap-2 px-4\">\n                      <div className=\"rounded-xl bg-white/5 p-3 text-center\">\n                        <p className=\"text-xl font-bold text-white\">12</p>\n                        <p className=\"text-xs text-white/60\">Classes</p>\n                      </div>\n                      <div className=\"rounded-xl bg-white/5 p-3 text-center\">\n                        <p className=\"text-xl font-bold text-white\">4.2k</p>\n                        <p className=\"text-xs text-white/60\">Calories</p>\n                      </div>\n                      <div className=\"rounded-xl bg-white/5 p-3 text-center\">\n                        <p className=\"text-xl font-bold text-white\">8</p>\n                        <p className=\"text-xs text-white/60\">Day Streak</p>\n                      </div>\n                    </div>\n\n                    {/* Schedule preview */}\n                    <div className=\"mt-4 px-4\">\n                      <p className=\"mb-3 text-sm font-semibold text-white\">\n                        Today's Schedule\n                      </p>\n                      {[\n                        \"HIIT • 6:00 AM\",\n                        \"Yoga • 12:00 PM\",\n                        \"Boxing • 6:30 PM\",\n                      ].map((item) => (\n                        <div\n                          key={item}\n                          className=\"mb-2 flex items-center justify-between rounded-lg bg-white/5 px-3 py-2\"\n                        >\n                          <span className=\"text-sm text-white/80\">{item}</span>\n                          <span className=\"text-xs text-white/40\">Book</span>\n                        </div>\n                      ))}\n                    </div>\n                  </div>\n                </div>\n              </div>\n\n              {/* Glow effect */}\n              <div className=\"absolute -inset-4 -z-10 rounded-[4rem] bg-gradient-to-b from-white/20 via-white/5 to-transparent blur-2xl\" />\n            </div>\n          </div>\n        </div>\n      </div>\n    </section>\n  )\n}\n",
