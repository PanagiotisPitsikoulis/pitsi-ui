      "path": "registry/new-york-v4/blocks/landing/landing-pricing-1.tsx",
      "content": "\"use client\"\n\nimport { useState } from \"react\"\nimport Link from \"next/link\"\nimport { Check, Loader2 } from \"lucide-react\"\n\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\nimport { Spacer } from \"@/registry/new-york-v4/ui/spacer\"\n\nconst features = {\n  free: [\n    \"Access to free components\",\n    \"Basic documentation\",\n    \"Community support\",\n    \"CLI tool access\",\n  ],\n  pro: [\n    \"Everything in Free\",\n    \"Access to all Pro components\",\n    \"Access to all Pro blocks\",\n    \"Access to all Pro animations\",\n    \"API keys for private registry\",\n    \"Lifetime updates\",\n  ],\n  exclusive: [\n    \"Everything in Pro\",\n    \"Priority support\",\n    \"Commercial license\",\n    \"Early access to new components\",\n    \"Direct support channel\",\n  ],\n  team: [\n    \"Everything in Exclusive\",\n    \"Up to 10 team members\",\n    \"Team API key management\",\n    \"Shared team dashboard\",\n  ],\n  enterprise: [\n    \"Everything in Team\",\n    \"Unlimited team members\",\n    \"Custom block requests\",\n    \"Dedicated support\",\n    \"Custom integrations\",\n  ],\n}\n\nfunction CheckoutButton({\n  planType,\n  variant = \"default\",\n}: {\n  planType: \"pro\" | \"exclusive\" | \"team\" | \"enterprise\"\n  variant?: \"default\" | \"highlighted\"\n}) {\n  const [isLoading, setIsLoading] = useState(false)\n\n  const handleCheckout = async () => {\n    setIsLoading(true)\n    // Simulate checkout - replace with actual checkout logic\n    await new Promise((resolve) => setTimeout(resolve, 1000))\n    setIsLoading(false)\n  }\n\n  const buttonText = \"Buy Now\"\n  const buttonVariant = variant === \"highlighted\" ? \"default\" : \"secondary\"\n\n  return (\n    <Button\n      onClick={handleCheckout}\n      disabled={isLoading}\n      size=\"lg\"\n      variant={buttonVariant}\n      className=\"w-full rounded-xl\"\n    >\n      {isLoading ? (\n        <>\n          <Loader2 className=\"mr-2 size-4 animate-spin\" />\n          Redirecting...\n        </>\n      ) : (\n        buttonText\n      )}\n    </Button>\n  )\n}\n\nfunction PricingCard({\n  name,\n  price,\n  originalPrice,\n  priceLabel,\n  description,\n  featureList,\n  badge,\n  children,\n  className,\n  featured = false,\n}: {\n  name: string\n  price: string\n  originalPrice?: string\n  priceLabel: string\n  description: string\n  featureList: string[]\n  badge?: string\n  children: React.ReactNode\n  className?: string\n  featured?: boolean\n}) {\n  return (\n    <div\n      className={cn(\n        \"border-border relative flex flex-col rounded-3xl border p-6 text-left md:p-8\",\n        className\n      )}\n    >\n      {badge && (\n        <div className=\"bg-foreground text-background absolute -top-3 left-1/2 z-10 -translate-x-1/2 rounded-full px-4 py-1.5 text-xs font-medium\">\n          {badge}\n        </div>\n      )}\n      <div className=\"mb-4\">\n        <h3 className=\"text-lg font-semibold\">{name}</h3>\n        <p className=\"text-muted-foreground mt-1 text-sm\">{description}</p>\n      </div>\n      <div className=\"mb-6\">\n        <div className=\"flex items-baseline gap-2\">\n          <span className=\"text-4xl font-bold tracking-tight\">{price}</span>\n          {originalPrice && (\n            <span className=\"text-muted-foreground/60 text-lg line-through\">\n              {originalPrice}\n            </span>\n          )}\n          <span className=\"text-muted-foreground text-sm\">/{priceLabel}</span>\n        </div>\n      </div>\n      <div className=\"mb-6\">{children}</div>\n      <ul className=\"flex-1 space-y-3\">\n        {featureList.map((feature, i) => (\n          <li key={i} className=\"flex items-start gap-3\">\n            <Check\n              className={cn(\"mt-0.5 size-4 shrink-0\", featured && \"text-brand\")}\n            />\n            <span className=\"text-sm\">{feature}</span>\n          </li>\n        ))}\n      </ul>\n    </div>\n  )\n}\n\nexport function LandingPricing1() {\n  const [licenseType, setLicenseType] = useState<\"single\" | \"team\">(\"single\")\n\n  return (\n    <div\n      id=\"pricing\"\n      className=\"container flex flex-col items-center justify-center px-6 py-16 text-center md:py-24\"\n    >\n      <p className=\"text-brand text-sm font-medium tracking-widest uppercase\">\n        Simple Pricing\n      </p>\n      <Spacer size=\"md\" sizeMobile=\"sm\" />\n      <h2 className=\"display max-w-4xl text-4xl leading-[1.1] tracking-tight md:text-6xl lg:text-7xl\">\n        One Fair Price.\n        <br />\n        <span className=\"text-foreground\">Lifetime Access.</span>\n      </h2>\n      <Spacer size=\"3xl\" sizeMobile=\"2xl\" />\n\n      {/* License Type Toggle */}\n      <div className=\"bg-muted/50 inline-flex rounded-full p-1\">\n        <button\n          onClick={() => setLicenseType(\"single\")}\n          className={cn(\n            \"rounded-full px-6 py-2 text-sm font-medium transition-all\",\n            licenseType === \"single\"\n              ? \"border-border bg-background text-foreground border shadow-sm\"\n              : \"text-muted-foreground hover:text-foreground\"\n          )}\n        >\n          Single User\n        </button>\n        <button\n          onClick={() => setLicenseType(\"team\")}\n          className={cn(\n            \"rounded-full px-6 py-2 text-sm font-medium transition-all\",\n            licenseType === \"team\"\n              ? \"border-border bg-background text-foreground border shadow-sm\"\n              : \"text-muted-foreground hover:text-foreground\"\n          )}\n        >\n          Team License\n        </button>\n      </div>\n\n      <Spacer size=\"2xl\" sizeMobile=\"xl\" />\n\n      {licenseType === \"single\" ? (\n        <>\n          <div className=\"grid w-full grid-cols-6 gap-6\">\n            {/* Free Plan */}\n            <PricingCard\n              className=\"bg-page col-span-6 border-dashed shadow-none md:col-span-2\"\n              name=\"Free\"\n              price=\"€0\"\n              priceLabel=\"forever\"\n              description=\"Get started with free components\"\n              featureList={features.free}\n            >\n              <Button\n                asChild\n                size=\"lg\"\n                variant=\"secondary\"\n                className=\"w-full rounded-xl\"\n              >\n                <Link href=\"/docs\">Get Started</Link>\n              </Button>\n            </PricingCard>\n\n            {/* Pro Plan */}\n            <PricingCard\n              className=\"bg-background col-span-6 shadow-sm md:col-span-2\"\n              name=\"Pro\"\n              price=\"€149\"\n              priceLabel=\"one-time\"\n              description=\"Full access for individuals\"\n              featureList={features.pro}\n              featured\n            >\n              <CheckoutButton planType=\"pro\" variant=\"highlighted\" />\n            </PricingCard>\n\n            {/* Exclusive Plan */}\n            <PricingCard\n              className=\"bg-page col-span-6 border-dashed shadow-none md:col-span-2\"\n              name=\"Exclusive\"\n              price=\"€499\"\n              priceLabel=\"one-time\"\n              description=\"Premium access with priority support\"\n              featureList={features.exclusive}\n            >\n              <CheckoutButton planType=\"exclusive\" />\n            </PricingCard>\n          </div>\n        </>\n      ) : (\n        <div className=\"grid w-full grid-cols-6 gap-6\">\n          {/* Team Info Card */}\n          <div className=\"border-border bg-page col-span-6 flex flex-col justify-center rounded-3xl border border-dashed p-6 text-left md:col-span-2 md:p-8\">\n            <h3 className=\"text-lg font-semibold\">Team Licenses</h3>\n            <p className=\"text-muted-foreground mt-2 text-sm\">\n              Equip your entire team with premium components. Share API keys,\n              collaborate on projects, and ship faster together.\n            </p>\n            <div className=\"mt-6 space-y-2\">\n              <div className=\"flex items-center gap-2\">\n                <Check className=\"text-brand size-4\" />\n                <span className=\"text-sm\">Centralized billing</span>\n              </div>\n              <div className=\"flex items-center gap-2\">\n                <Check className=\"text-brand size-4\" />\n                <span className=\"text-sm\">Shared team dashboard</span>\n              </div>\n              <div className=\"flex items-center gap-2\">\n                <Check className=\"text-brand size-4\" />\n                <span className=\"text-sm\">Volume discounts</span>\n              </div>\n            </div>\n          </div>\n\n          {/* Startup Plan */}\n          <PricingCard\n            className=\"bg-background col-span-6 shadow-sm md:col-span-2\"\n            name=\"Startup\"\n            price=\"€999\"\n            originalPrice=\"€4,990\"\n            priceLabel=\"one-time\"\n            description=\"For teams up to 10 members\"\n            featureList={features.team}\n            featured\n          >\n            <CheckoutButton planType=\"team\" variant=\"highlighted\" />\n          </PricingCard>\n\n          {/* Unlimited Plan */}\n          <PricingCard\n            className=\"bg-page col-span-6 border-dashed shadow-none md:col-span-2\"\n            name=\"Unlimited\"\n            price=\"€1,999\"\n            originalPrice=\"€14,970\"\n            priceLabel=\"one-time\"\n            description=\"Unlimited team members\"\n            featureList={features.enterprise}\n          >\n            <CheckoutButton planType=\"enterprise\" />\n          </PricingCard>\n        </div>\n      )}\n\n      <Spacer size=\"2xl\" sizeMobile=\"lg\" />\n      <p className=\"text-muted-foreground text-sm\">\n        Secure payment powered by Stripe. No recurring charges, no hidden fees.\n      </p>\n    </div>\n  )\n}\n",
      "type": "registry:block"
    }
  ],
