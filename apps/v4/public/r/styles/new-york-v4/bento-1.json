ssName=\"pointer-events-none absolute inset-0 h-full w-full\">\n        <motion.line\n          x1=\"25%\"\n          y1=\"50%\"\n          x2=\"50%\"\n          y2=\"50%\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1\"\n          className=\"text-brand/50\"\n          initial={{ pathLength: 0 }}\n          animate={{ pathLength: 1 }}\n          transition={{ duration: 1.5, repeat: Infinity, repeatType: \"loop\" }}\n        />\n        <motion.line\n          x1=\"75%\"\n          y1=\"50%\"\n          x2=\"50%\"\n          y2=\"50%\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1\"\n          className=\"text-brand/50\"\n          initial={{ pathLength: 0 }}\n          animate={{ pathLength: 1 }}\n          transition={{\n            duration: 1.5,\n            delay: 0.5,\n            repeat: Infinity,\n            repeatType: \"loop\",\n          }}\n        />\n      </svg>\n    </div>\n  )\n}\n\ntype CardItem = {\n  type: \"card\"\n  title: string\n  description: string\n  illustration: () => React.JSX.Element\n}\n\ntype IconItem = {\n  type: \"icon\"\n  icon: (props: { className?: string }) => React.JSX.Element\n}\n\ntype GridItem = CardItem | IconItem\n\nconst gridItems: GridItem[] = [\n  {\n    type: \"card\",\n    title: \"MCP Server\",\n    description:\n      \"AI integrations built-in. Everything is AI-friendly and ready for your workflows.\",\n    illustration: SmartMCPServerIllustration,\n  },\n  {\n    type: \"card\",\n    title: \"Battle Tested\",\n    description:\n      \"Resilient components that are bug-proof. Tested in production, built to last.\",\n    illustration: BattleTestedIllustration,\n  },\n  { type: \"icon\", icon: SelectCheckboxIcon },\n  { type: \"icon\", icon: PinchIcon },\n  {\n    type: \"card\",\n    title: \"Logic Included\",\n    description:\n      \"Code included in every block. You don't just download the looks—everything works out of the box.\",\n    illustration: FullyFunctionalIllustration,\n  },\n  {\n    type: \"card\",\n    title: \"Full-Stack Blocks\",\n    description:\n      \"Complete page sections with frontend code and CMS schemas. Heroes, pricing tables, auth flows—ready for production.\",\n    illustration: FullStackBlocksIllustration,\n  },\n  {\n    type: \"card\",\n    title: \"CMS Integration\",\n    description:\n      \"Payload and Sanity schemas included for seamless content management.\",\n    illustration: CMSIntegrationIllustration,\n  },\n  {\n    type: \"card\",\n    title: \"Smart Customization\",\n    description:\n      \"Blocks take props for their components and a classNames prop to theme all elements—no code changes needed.\",\n    illustration: SmartCustomizationIllustration,\n  },\n  { type: \"icon\", icon: NumbersIcon },\n]\n\nexport function Bento1() {\n  return (\n    <div\n      id=\"features\"\n      className=\"container flex flex-col items-center justify-center px-6 py-16 text-center md:py-24\"\n    >\n      <p className=\"text-brand text-sm font-medium tracking-widest uppercase\">\n        Save Hours of dev Time with Advanced Features\n      </p>\n      <Spacer size=\"md\" sizeMobile=\"sm\" />\n      <h2 className=\"display max-w-4xl text-4xl leading-[0.95] tracking-tight md:text-6xl lg:text-7xl\">\n        Beyond Just\n        <br />\n        <span className=\"text-foreground\">Components.</span>\n      </h2>\n      <Spacer size=\"4xl\" sizeMobile=\"3xl\" />\n\n      <div className=\"grid w-full grid-cols-1 gap-4 md:grid-cols-3 md:gap-6\">\n        {gridItems.map((item, index) => {\n          if (item.type === \"icon\") {\n            const IconComponent = item.icon\n            return (\n              <div\n                key={`icon-${index}`}\n                className=\"hidden items-center justify-center md:flex\"\n              >\n                <IconComponent className=\"text-brand size-36\" />\n              </div>\n            )\n          }\n\n          return (\n            <div key={item.title} class