      "content": "\"use client\"\n\nimport { memo, useRef } from \"react\"\nimport Image from \"next/image\"\nimport Link from \"next/link\"\nimport { motion, useScroll, useTransform } from \"motion/react\"\n\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\nimport { HeroButton } from \"@/registry/new-york-v4/ui/hero-button\"\nimport { Spacer } from \"@/registry/new-york-v4/ui/spacer\"\n\n// Inline LayoutGrid for self-contained block\nfunction LayoutGrid({\n  children,\n  className,\n}: {\n  children: React.ReactNode\n  className?: string\n}) {\n  return (\n    <div className={cn(\"grid grid-cols-6 gap-6\", className)}>{children}</div>\n  )\n}\n\nfunction LayoutGridItem({\n  children,\n  className,\n  span = 6,\n  spanMd,\n}: {\n  children: React.ReactNode\n  className?: string\n  span?: 1 | 2 | 3 | 4 | 5 | 6\n  spanMd?: 1 | 2 | 3 | 4 | 5 | 6\n}) {\n  const spanClasses = {\n    1: \"col-span-1\",\n    2: \"col-span-2\",\n    3: \"col-span-3\",\n    4: \"col-span-4\",\n    5: \"col-span-5\",\n    6: \"col-span-6\",\n  }\n  const spanMdClasses = {\n    1: \"md:col-span-1\",\n    2: \"md:col-span-2\",\n    3: \"md:col-span-3\",\n    4: \"md:col-span-4\",\n    5: \"md:col-span-5\",\n    6: \"md:col-span-6\",\n  }\n  return (\n    <div\n      className={cn(\n        spanClasses[span],\n        spanMd && spanMdClasses[spanMd],\n        className\n      )}\n    >\n      {children}\n    </div>\n  )\n}\n\n// Inline ParallaxImage for self-contained block\nconst ParallaxImage = memo<{\n  src: string\n  alt?: string\n  className?: string\n  imageClassName?: string\n  range?: [string, string]\n  offset?: [string, string]\n  children?: React.ReactNode\n  zoom?: boolean\n}>(\n  ({\n    src,\n    alt = \"\",\n    className,\n    imageClassName,\n    range = [\"0%\", \"50%\"],\n    offset = [\"start start\", \"end start\"],\n    children,\n    zoom = false,\n  }) => {\n    const ref = useRef<HTMLDivElement>(null)\n    const { scrollYProgress } = useScroll({\n      target: ref,\n      offset: offset as any,\n    })\n    const y = useTransform(scrollYProgress, [0, 1], range)\n\n    return (\n      <div\n        ref={ref}\n        className={cn(\"relative overflow-hidden\", zoom && \"group\", className)}\n      >\n        <motion.div\n          style={{ y }}\n          className={cn(\n            \"relative h-full w-full\",\n            zoom &&\n              \"transition-transform duration-500 ease-out group-hover:scale-110\",\n            imageClassName\n          )}\n        >\n          <Image\n            src={src}\n            alt={alt}\n            fill\n            className=\"object-cover\"\n            sizes=\"100vw\"\n            priority\n          />\n        </motion.div>\n        {children}\n      </div>\n    )\n  }\n)\nParallaxImage.displayName = \"ParallaxImage\"\n\nexport function LandingHero1() {\n  return (\n    <div id=\"hero\" className=\"relative -mt-[56px] overflow-hidden\">\n      {/* Gradient header overlay */}\n      <div className=\"from-background absolute inset-x-0 top-0 z-10 h-32 bg-gradient-to-b to-transparent\" />\n\n      {/* Diagonal background */}\n      <div className=\"absolute inset-0 flex justify-center\">\n        <div className=\"relative w-full max-w-[1920px]\">\n          {/* Light mode */}\n          <svg\n            className=\"absolute h-full w-full [mask-image:linear-gradient(to_bottom,transparent_0%,transparent_3%,black_12%)] dark:hidden\"\n            viewBox=\"0 0 1920 1080\"\n            preserveAspectRatio=\"xMidYMid slice\"\n            fill=\"none\"\n            xmlns=\"http://www.w3.org/2000/svg\"\n          >\n            <defs>\n              <pattern\n                id=\"hero-image-light\"\n                patternUnits=\"objectBoundingBox\"\n                width=\"1\"\n                height=\"1\"\n              >\n                <image\n                  href=\"/marketing/surfing.webp\"\n                  x=\"0\"\n                  y=\"