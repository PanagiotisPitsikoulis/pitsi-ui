      "content": "\"use client\"\n\nimport Image from \"next/image\"\nimport Link from \"next/link\"\n\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\nimport { Input } from \"@/registry/new-york-v4/ui/input\"\nimport { Label } from \"@/registry/new-york-v4/ui/label\"\n\nexport function Auth4() {\n  return (\n    <div className=\"grid min-h-screen lg:grid-cols-2\">\n      {/* Left - Form */}\n      <div className=\"flex items-center justify-center px-4 py-12 lg:px-8\">\n        <div className=\"w-full max-w-sm\">\n          {/* Logo */}\n          <div className=\"mb-8\">\n            <Link href=\"/\" className=\"inline-block\">\n              <span className=\"text-2xl font-bold\">Logo</span>\n            </Link>\n          </div>\n\n          {/* Header */}\n          <div className=\"mb-8\">\n            <h1 className=\"text-2xl font-bold tracking-tight\">\n              Sign in to your account\n            </h1>\n            <p className=\"text-muted-foreground mt-2 text-sm\">\n              Welcome back! Please enter your details.\n            </p>\n          </div>\n\n          {/* Form */}\n          <form className=\"space-y-4\">\n            <div className=\"space-y-2\">\n              <Label htmlFor=\"email\">Email</Label>\n              <Input\n                id=\"email\"\n                type=\"email\"\n                placeholder=\"name@example.com\"\n                autoComplete=\"email\"\n              />\n            </div>\n\n            <div className=\"space-y-2\">\n              <div className=\"flex items-center justify-between\">\n                <Label htmlFor=\"password\">Password</Label>\n                <Link\n                  href=\"#\"\n                  className=\"text-muted-foreground hover:text-foreground text-sm\"\n                >\n                  Forgot password?\n                </Link>\n              </div>\n              <Input\n                id=\"password\"\n                type=\"password\"\n                placeholder=\"••••••••\"\n                autoComplete=\"current-password\"\n              />\n            </div>\n\n            <Button type=\"submit\" className=\"w-full\">\n              Sign in\n            </Button>\n\n            <Button type=\"button\" variant=\"outline\" className=\"w-full\">\n              <svg className=\"mr-2 h-4 w-4\" viewBox=\"0 0 24 24\">\n                <path\n                  fill=\"currentColor\"\n                  d=\"M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z\"\n                />\n                <path\n                  fill=\"currentColor\"\n                  d=\"M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z\"\n                />\n                <path\n                  fill=\"currentColor\"\n                  d=\"M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z\"\n                />\n                <path\n                  fill=\"currentColor\"\n                  d=\"M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z\"\n                />\n              </svg>\n              Sign in with Google\n            </Button>\n          </form>\n\n          {/* Footer */}\n          <p className=\"text-muted-foreground mt-8 text-sm\">\n            Don't have an account?{\" \"}\n            <Link\n              href=\"#\"\n              className=\"text-foreground font-medium hover:underline\"\n            >\n              Sign up for free\n            </Link>\n          </p>\n        </div>\n      </div>\n\n      {/* Right - Image */}\n      <div className=\"bg-muted relative hidden lg:block\">\n        <Image\n          src=\"https://pitsiui.com/placeholders/auth-bg.webp\"\n          alt=\"Authentication\"\n          fill\n          className=\"object-cover\"\n        />\n        <div className=\"absolute inset-0 bg-black/20\" />\n        <div className=\"absolute right-12 bottom-12 left-12\">\n          <blockquote className=\"space-y-2\">\n            <p className=\"text-lg text-white\">\n              \"This platform has completely transformed how we manage our\n              projects. The interface is intuitive and the features are exactly\n              what we needed.\"\n            </p>\n            <footer className=\"text-sm text-white/80\">\n              — Sarah Chen, Product Manager at TechCorp\n            </footer>\n          </blockquote>\n        </div>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:block"
    }
